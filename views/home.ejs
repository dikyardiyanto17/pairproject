<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <!-- <a href="">Show Profile</a> -->
    <form action="/home" method="get">
        <p>
            <input type="text" name="title" placeholder="Search By Title">
        </p>
        <p>
        </p>
        <input type="submit" value="Search">
    </form>
    <a href="/home?sort=DESC"><button>Newest</button></a>
    <a href="/home?sort=ASC"><button>Oldest</button></a>
    <% if(validation) { %>
        <p><%= validation %> </p>
    <% } %> 
    <form action="/home/post" method="post">
        <fieldset>
            <legend>Post Here</legend>
            <p>
                <input type="text" name="title" placeholder="Post Title"> <br>
            </p>
            <p>
                <textarea name="content" id="" cols="50" rows="10" placeholder="Leave a description here"></textarea>
            </p>
            <p>
                <select name="moodStatus" id="">
                    <option value="" selected disabled>-choose your mood-</option>
                    <% emoticon.forEach(em => {%>
                        <option value="online"><%= em %> </option>   
                        <%}) %> 

                </select>
                <input type="hidden"  name="ProfileId" value="<%= user.Profile.id %>  ">
            </p>
            <p>
                Hashtag:
                <input type="text" name="name" id="">
            </p>
            <button type="submit">post</button>
        </fieldset>
    </form>
        <% post.forEach(el => { %>
            <div class="timeline" >
                <div class="outer">
                  <div class="card" style="position: relative;
                  margin: 0 0 20px 20px;
                  padding: 10px;
                  background: #333;
                  color: gray;
                  border-radius: 8px;
                  max-width: 400px;">
                    <div class="info" style="  display: flex;
                    flex-direction: column;">
                    <h4 class="title" style=" color: red;
                    position: relative;">
                    <a href="/profile/<%= el.Profile.id %> ">@<%= el.Profile.fullname %></a>
                     </h4>
                      <h4 class="title" style=" color: orangered;
                      position: relative;"><%= el.title %> </h4>
                      <p><%= el.content %>  </p>
                      <% el.PostTags.forEach(x => {%>
                            <p>#<%= x.Tag.name %> </p>
                        <%}) %> 
                      <h6> Post at <%= dateFormat(el.createdAt) %>  </h6>
                    </div>
                  </div>
            <% }) %> 
</body>
</html>bat

