<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Your Profile</title>
</head>
<body>
    <h1>Edit Profile</h1>
    <form action="/profile/<%= profile.id %>/edit" method="post">
        <p>
            Fullname : <br>
            <input type="text" name="fullname" value="<%= profile.fullname %>">
        </p>
        <p>
            Photo : <br>
            <input type="text" name="photo" value="<%= profile.photo %>">
        </p>
        <p>
            Bio : <br>
            <textarea name="bio"cols="30" rows="10"><%= profile.bio %></textarea>
        </p>
        <p>
            Phone Number : <br>
            <input type="text" name="phone" value="<%= profile.phone %>">
        </p>
        <p>
            Gender : <br>

            <% gender.forEach(x => { %>
                <% if (profile.gender == x){ %>
                <input type="radio" name="gender" value="<%= x %>" checked="checked"> <%= x %>
                <% } else { %>
                <input type="radio" name="gender" value="<%= x %>"> <%= x %>
                <% } %>
            <% }) %>
        </p>
        <input type="submit">
    </form>
    
</body>
</html>